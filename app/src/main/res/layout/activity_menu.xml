<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivTrofeu"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="OSCAR APP"
        android:textSize="38sp" />


    <!-- Bot達o de votar em filme -->
    <TextView
        android:id="@+id/tvToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Seu token de usuario: "
        android:textSize="12dp"
        android:padding="12dp"/>

    <Button
    android:id="@+id/btnVoteMovie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Votar Filme"
    android:textAllCaps="false"
    android:backgroundTint="#4CAF50"
    android:textColor="#FFFFFF"
    android:layout_marginBottom="12dp"
    android:padding="12dp" />

        <!-- Bot達o de votar em diretor -->
    <Button
    android:id="@+id/btnVoteDirector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Votar Diretor"
    android:textAllCaps="false"
    android:backgroundTint="#03A9F4"
    android:textColor="#FFFFFF"
    android:layout_marginBottom="12dp"
    android:padding="12dp" />

        <!-- Bot達o para confirmar o voto -->
    <Button
    android:id="@+id/btnConfirmVote"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Confirmar Voto"
    android:textAllCaps="false"
    android:backgroundTint="#FF9800"
    android:textColor="#FFFFFF"
    android:layout_marginBottom="12dp"
    android:padding="12dp" />

        <!-- Bot達o de sair -->
    <Button
    android:id="@+id/btnLogout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Sair"
    android:textAllCaps="false"
    android:backgroundTint="#F44336"
    android:textColor="#FFFFFF"
    android:padding="12dp" />

</LinearLayout>
